<h1 class="p-3 mb-3 text-center">Gestão de Cartões</h1>

<div class="text-end">
    <a class="btn btn-outline-secondary btn-sm rounded-top" href="/card/add">
        <i class="bi bi-plus">Adicionar Cartão</i>
    </a>
</div>
<div class="container-fluid table-responsible border border-2 p-0 card-table">
    <table class="table table-striped text-center">
        <thead>
            <tr>
                <th>ID</th>
                <th>Número</th>
                <th>CVC</th>
                <th>Validade</th>
                <th>Opcões</th>
            </tr>
        </thead>
        <tbody class="table-group-divider">
        {{#unless cards}}
            <tr>
                <td colspan="5">[Sem Cartões Registados]</td>
            </tr>
        {{else}}
            {{#each cards}}
                <tr class="align-middle">
                    {{#with this.dataValues}}
                        <td>{{ id }}</td>
                        <td>{{ number }}</td>
                        <td>{{ cvc }}</td>
                        <td>{{ cardDate expires }}</td>
                        <td>
                            <a class="btn btn-info btn-sm" href="/card/edit/{{id}}" title="Editar Registo">
                                <span class="bi bi-pencil-square" style="color: white;"></span>
                            </a>
                            <a class="btn btn-danger btn-sm" href="/card/delete/{{id}}" title="Eliminar Registo">
                                <span class="bi bi-trash" style="color: white;"></span>
                            </a>
                        </td>
                    {{/with}}
                </tr>
            {{/each}}
        {{/unless}}
        </tbody>
    </table>
</div>
